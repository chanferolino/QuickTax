<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="@color/colorTwo">

    <include layout="@layout/category_toolbar_one"
        android:id="@+id/include" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iconUtilities"
        android:src="@drawable/utilities"
        android:layout_marginBottom="31dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/txtUtilities"
        android:layout_toStartOf="@+id/txtUtilities" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Utilities"
        android:id="@+id/txtUtilities"
        android:padding="10dp"
        android:textColor="@color/colorPrimaryText"
        android:layout_alignBottom="@+id/iconUtilities"
        android:layout_centerHorizontal="true" />


</RelativeLayout>