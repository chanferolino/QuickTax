<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="480dp"
    android:background="@color/colorFour">

    <include layout="@layout/category_toolbar_three"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/include3" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iconFood"
        android:src="@drawable/food"
        android:layout_below="@+id/include3"
        android:layout_toLeftOf="@+id/txtFood"
        android:layout_toStartOf="@+id/txtFood"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Food"
        android:id="@+id/txtFood"
        android:padding="10dp"
        android:textColor="@color/colorPrimaryText"
        android:layout_alignBottom="@+id/iconFood"
        android:layout_centerHorizontal="true" />

</RelativeLayout>