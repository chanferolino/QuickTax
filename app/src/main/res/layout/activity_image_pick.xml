<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:opencv="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="25dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/cat" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtCategory"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:enabled="false"
        android:layout_margin="10dp"
        android:layout_below="@+id/cat"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/result"
        android:layout_above="@+id/captureFront"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/captureFront"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="From Gallery"
        android:layout_marginBottom="69dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/result"
        android:layout_alignEnd="@+id/result" />

    <Button
        android:id="@+id/captureActual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCapture"
        android:text="Take Picture"
        android:layout_alignBottom="@+id/captureFront"
        android:layout_alignLeft="@+id/result"
        android:layout_alignStart="@+id/result" />


</RelativeLayout>